<h1>Hair Salon</h1>
<h3>Clients</h3>
@if (@Model.Count == 0)
{
  <p>No clients have been added yet!</p>
}
@foreach (var client in Model)
{
  <a href='/clients/@client.GetId()'>@client.GetName()</a>
}
<form action='/clients/delete' method="post">
  <button id='deleteAll' name='deleteAll' type="submit">Clear all clients</button>
</form>
<br>
<a href='/'>Home</a>
