<h1>Hair Salon</h1>
<h3>Specialties</h3>
@if (@Model.Count == 0)
{
  <p>No specialties have been added yet!</p>
}
@foreach (var specialty in Model)
{
  <a href='/specialties/@specialty.GetId()'>@specialty.GetDescription()</a>
  <br>
}
<br>
<a href='/specialties/new'>Add specialty</a>
<form action='/specialties/delete' method="post">
  <button id='deleteAll' name='deleteAll' type="submit">Clear all specialties</button>
</form>
<a href='/'>Home</a>
