<h1>Hair Salon</h1>
<h3>Stylists:</h3>
@foreach (var stylist in Model)
{
  <a href='/stylists/@stylist.GetId()'>@stylist.GetName() (add client(s) or specialty)</a>
  <br>
}
@if (@Model.Count != 0)
{
  <br>
  <a href="/clients/new">Add new client</a>
}
<br>
<a href="/stylists/new">Add new stylist</a>
<form action='/stylists/delete' method="post">
  <button id='deleteAll' name='deleteAll' type="submit">Clear all stylists</button>
</form>
<br>
<a href='/'>Home</a>
